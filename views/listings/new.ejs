<% layout("/layouts/boilerplate") %>
  <div class="row">
    <div class="col-8 offset-2">
      <br /> <br />
      <h3 class=new-heading>Create a New Listing</h3>
      <form method="POST" action="/listings" class="row g-3 needs-validation" novalidate enctype="multipart/form-data">
        <div class="mb-3">
          <label for="title" class="form-label ms-2"> Title</label>
          <input id="title" name="listing[title]" placeholder="Enter title" type="text" class="form-control" required/>
          <div class="valid-feedback"> Title Looks Good </div>
          <div class="invalid-feedback"> Title Must be Defined </div>
        </div>


        <div class="mb-3">
          <label for="description" class="form-label ms-2">Description</label>
          <input id="description" placeholder="Write a short description about the listing" style="height:70px"
            name="listing[description]" class="form-control" required/>
           <div class="valid-feedback"> Description Added </div>
           <div class="invalid-feedback"> Description Should be valid</div> 
        </div>

        <div class="mb-3">
          <label for="image" class="form-label ms-2">Upload Image</label>
          <input id="image" name="listing[image]" class="form-control" type="file" required />
          <div class="valid-feedback"> Image link Entered </div>
          <div class="invalid-feedback"> Enter Image link</div>
        </div>

        <div class="row">
          <div class="mb-3 col-md-5">
            <label for="price" class="form-label ms-2">Price</label>
            <input id="price" name="listing[price]" placeholder="Enter Price" class="form-control" required />
            <div class="valid-feedback"> Price Added </div>
            <div class="invalid-feedback"> Enter Valid Price</div>


          </div>

          <div class="mb-3 col-md-7">
            <label for="country" class="form-label ms-2">Country</label>
            <input id="country" name="listing[country]" placeholder="Enter Country" class="form-control" required />
            <div class="valid-feedback"> Country Added</div>
            <div class="invalid-feedback"> Enter Valid Country Name</div>
          </div>
        </div>

        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input id="location" name="listing[location]" placeholder="Enter Location" class="form-control" required/>
          <div class="valid-feedback"> Location Added </div>
          <div class="invalid-feedback"> Enter Valid Location</div>
        </div>


              <!-- CATEGORY DROPDOWN -->
  <div class="mb-3">
  <label for="category" class="form-label">Category</label>
  <select class="form-control" name="listing[category]" id="category">
    <option value="">Select Category</option>
    <option value="Trending">Trending</option>
    <option value="Room">Room</option>
    <option value="Cities">Cities</option>
    <option value="Mountains">Mountains</option>
    <option value="Castles">Castles</option>
    <option value="Pool">Pool</option>
    <option value="Camping">Camping</option>
    <option value="Farms">Farms</option>
    <option value="Skiing">Skiing</option>
    <option value="Forest">Forest</option>
    <option value="Beach">Beach</option>
    <option value="Hiking">Hiking</option>
  </select>
</div>

        <div class="d-flex justify-content-center my-3">
          <button class="btn btn-danger">Add Listing</button>
        </div>

        <br /> <br />
      </form>
    </div>
  </div>