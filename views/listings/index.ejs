<% layout("/layouts/boilerplate") %>

<div class="filter-container d-flex flex-wrap gap-2 p-2 mt-3 position-relative">
  
  <!-- Always visible filters -->
  <div class="filter"><i class="fa-solid fa-fire"></i><p>Trending</p></div>
  <div class="filter"><i class="fa-solid fa-bed"></i><p>Room</p></div>
  <div class="filter"><i class="fa-solid fa-city"></i><p>Cities</p></div>
  <div class="filter"><i class="fa-solid fa-mountain-city"></i><p>Mountains</p></div>
  <div class="filter"><i class="fa-solid fa-building"></i><p>Castles</p></div>
  <div class="filter"><i class="fa-solid fa-person-swimming"></i><p>Pool</p></div>
  <div class="filter"><i class="fa-solid fa-campground"></i><p>Camping</p></div>
  <div class="filter"><i class="fa-solid fa-cow"></i><p>Farms</p></div>
  <div class="filter"><i class="fa-solid fa-skiing"></i><p>Skiing</p></div>
  <div class="filter"><i class="fa-solid fa-tree"></i><p>Forest</p></div>
  <div class="filter"><i class="fa-solid fa-umbrella-beach"></i><p>Beach</p></div>
  <div class="filter"><i class="fa-solid fa-mountain"></i><p>Hiking</p></div>
  
  <!-- Toggle button for collapse -->
  <button class="filter more-btn  btn btn-light btn-sm" 
          type="button" 
          data-bs-toggle="collapse" 
          data-bs-target="#extraFilters" 
          aria-expanded="false" 
          aria-controls="extraFilters">
    <i class="fa-solid fa-ellipsis"></i><p>More</p>
  </button>

   <div class="tax-toggle">
      <div class="form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
        <label class="form-check-label" for="switchCheckDefault">Display Total After Taxes</label>
      
    </div>

  <!-- Collapsible extra filters -->
  <div class="collapse w-100 mt-2" id="extraFilters">
    <div class="d-flex flex-wrap gap-2">
      <div class="filter"><i class="fa-solid fa-hot-tub-person"></i><p>Spa</p></div>
      <div clas="filter"><i class="fa-solid fa-snowflake"></i><p>Arctic</p></div>
      <div class="filter"><i class="fa-solid fa-wine-glass"></i><p>Winery</p></div>
      <div class="filter"><i class="fa-solid fa-ship"></i><p>Boat Trips</p></div>
      <div class="filter"><i class="fa-solid fa-mug-hot"></i><p>Cafe</p></div>

      <!-- add all extra filters here -->
    </div>
  </div>

</div>

  
    </div> 

  <!-- you can add more filters here -->


  <div class=" px-2 mt-4">
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-3 mt-3">
      <% for(let listing of allListings) { %>
        <a href="/listings/<%= listing._id %>" class="listing-links">
          <div class="card col listing-card">
            <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height:20rem">
            <div class="card-img-overlay"></div>
            <div class="card-body">
              <div class="listing-title">
                <b>
                  <%= listing.title %>
                </b>
              </div>
              <div class="listing-price">
               <p> â‚¹ <%= listing.price.toLocaleString("en-IN") %> / night &nbsp;&nbsp; <i class="tax-info"> +18% TAX </i></p>  
              </div>
              
            </div>
          </div>
        </a>
        <% } %>
    </div>
  </div>


