<% layout('layouts/boilerplate') %>

<div class="home-container">

    <!-- Hero Section -->
    <section class="hero d-flex align-items-center justify-content-center text-center text-white">
        <div class="hero-content">
            <h1>Welcome to Vistara</h1>
            <p>Your gateway to unique stays and unforgettable experiences.</p>
           
        </div>
    </section>

    <!-- Features Section -->
    <section class="features container text-center mt-5">
        <h2 class="mb-4">Why Choose Vistara?</h2>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            <div class="col">
                <div class="feature-card p-4 h-100 shadow-sm">
                    <i class="fa-solid fa-house fa-2xl mb-3"></i>
                    <h5>Verified Homes</h5>
                    <p>All listings are verified to ensure a safe and comfortable stay.</p>
                </div>
            </div>
            <div class="col">
                <div class="feature-card p-4 h-100 shadow-sm">
                    <i class="fa-solid fa-globe fa-2xl mb-3"></i>
                    <h5>Global Experiences</h5>
                    <p>Discover unique experiences from around the world at your fingertips.</p>
                </div>
            </div>
            <div class="col">
                <div class="feature-card p-4 h-100 shadow-sm">
                    <i class="fa-solid fa-shield fa-2xl mb-3"></i>
                    <h5>Secure Booking</h5>
                    <p>Safe and seamless transactions with trusted payment methods.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Call-to-Action Section -->
    <section class="cta text-center mt-5 py-5">
        <h2>Ready to Start Your Adventure?</h2>
        <p>Explore amazing homes and experiences with Vistara today.</p>
        <a href="/listings" class="btn btn-success btn-lg mt-3">Explore Listings</a>
    </section>

</div>
