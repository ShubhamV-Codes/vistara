<% layout("/layouts/boilerplate") %>

  <div class="row mt-3 show-main">

    <!-- Listing Title -->
    <div class="show-heading">
      <h3>
        <%= listing.title %>
      </h3>
    </div>

    <!-- Listing Card -->
    <div class="card col-6 offset-3 shadow-lg mb-5 rounded-4 listing-card">
      <img src="<%= listing.image.url %>" class="card-img-top show-img rounded-top-4 mt-3 ms-1.5" alt="listing_image" />

      <div class="card-body text-center">
        <p class="card-text text-muted">
          <i>Owner: <%= listing.owner ? listing.owner.username : "shubham" %></i>
        </p>
      </div>

      <div class="card-body text-center">
        <p class="card-text text-muted">
          <%= listing.description %>
        </p>

        <div class="mt-3">
          <h5 class="text-success fw-semibold">
            &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
          </h5>
        </div>

        <div class="mt-3 text-muted">
          <p class="mb-1">
            <i class="bi bi-geo-alt-fill text-danger"></i>
            <%= listing.location %>
          </p>
          <p class="mb-0">
            <i class="bi bi-globe2 text-primary"></i>
            <%= listing.country %>
          </p>
        </div>
      </div>
    </div>

    <br />

    <!-- Edit/Delete Buttons (only for owner) -->
    <% if(currUser && listing.owner && currUser._id.toString()===listing.owner._id.toString()){ %>
      <div class="btns d-flex justify-content-center gap-3 mt-3 showbtns">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-warning px-4">Edit</a>
        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
          <button class="btn btn-danger px-4">Delete</button>
        </form>
      </div>
      <% } %>

        <hr>

        <!-- Review Form -->
        <div class="col-8 mb-3 mx-auto">
          <% if(!currUser){ %>
            <h4 class="fw-bold ms-auto"><i>Login to Add Review</i></h4>
            <% } %>

              <% if(currUser){ %>
                <h4 class="reviews-heading text-start">Leave a Review</h4>
                <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">

                  <div class="mb-3 mt-3 text-start">
                  <label for="rating" class="form-label d-block">Rating</label>

                  <fieldset class="starability-slot">
                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked
                      aria-label="No rating." />
                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                  </fieldset>
       

        <div class="mb-3 mt-3">
          <label for="comment" class="form-label">Comment</label>
          <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
          <div class="invalid-feedback">Please Add Some Comments For Reviews</div>
        </div>
        <button class="btn btn-outline-dark">Submit</button>
        </form>
        <% } %>
  </div>
   </div>

  <!-- Reviews List -->
  <div class="col-8 mb-3 mx-auto">
    <div class="reviews-section col-12 mb-3">
      <h4 class="reviews-heading mb-4 text-start">Reviews by Customers</h4>
      <div class="row reviews-list g-3 justify-content-center mt-3">
        <% listing.reviews.forEach(review=> { %>
          <div class="card review-card mb-3 col-12 col-md-5">
            <div class="card-body review-card-body">
              <div class="card-title review-author mt-3 ms-2">
                @<%= review.author ? review.author.username : "Anonymous" %>
                  <!-- <hr class="review-separator"> -->
                  <p class="starability-result card-text" data-rating="<%= review.rating %>"> Rating</p>
                  <hr class="review-separator">
                  <p class="card-text review-text"> <%= review.comment %></p> 
              </div>

              <% if(currUser && review.author && currUser._id.toString()===review.author._id.toString()){ %>
                <form class="review-delete-form mb-3 d-flex justify-content-center" method="POST"
                  action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                  <button class="btn btn-sm btn-dark review-delete-btn mt-3">Delete</button>
                </form>
                <% } %>
            </div>
          </div>
          <% }) %>
      </div>
    </div>
  </div>

  </div>