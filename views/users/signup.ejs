<% layout("./layouts/boilerplate") %>
    <div class="row">
        <h2 class="col-6 offset-3">Signup for Vistara</h2>
        <div class="col-6 offset-3">
            <form action="/signup" method="POST" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label ms-2"> Username</label>
                    <input id="username" name="username" type="text" class="form-control" required />
                    <div class="invalid-feedback">username is required</div>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label ms-2"> email</label>
                    <input id="email" name="email" type="text" class="form-control" required />
                    <div class="invalid-feedback">email is required</div>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label ms-2"> Password</label>
                    <input id="password" name="password" type="password" class="form-control" required />
                    <div class="invalid-feedback">Password is required</div>
                </div>  

                <button class="btn btn-dark add-btn">Signup</button> 
                              
            </form>
        </div>
    </div>